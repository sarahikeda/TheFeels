<!DOCTYPE html>
<html>
  <head>
    <title>TheFeels</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class='container'>
      <div id='navigation-links'>
        <ul>
          <% if current_user %>
            <li><%= link_to 'TheFeels', user_path(current_user) %></li>
            <li id='login'><%= link_to('Sign Out', signout_path) %></li>
          <% else %>
            <li id='login'><%= link_to "Sign In", "/auth/google_oauth2", id: "sign_in" %>
          <% end %>
        </ul>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
