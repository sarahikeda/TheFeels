<div class='partners'>
  <% if @user.partners.any? %>
    <p>Partners</p>
    <%= select("partner_name", "partner_id", @user.partners.collect {|partner| [partner.name, partner.id]}) %>
  <% else %>
    <%= button_tag "Add Partner", class: "add-partner", data: { disable_with: "Please wait..."} %>

    <div class='new-partner'>
      <%= render 'partners/form' %>
    </div>
  <% end %>
</div>
